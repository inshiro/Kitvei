    <!--  Theme: Light.DarkToolbar -->
    <style name="Theme.GuidelinesCompat.Light.DarkToolbar" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="windowActionModeOverlay">true</item>

        <!-- Actionbar styles -->
        <item name="actionBarTheme">@style/Theme.GuidelinesCompat.DarkToolbar</item>
        <item name="actionBarPopupTheme">@style/Theme.MaterialComponents</item>

        <!-- Action Mode styles -->
        <item name="actionModeStyle">@style/Widget.GuidelinesCompat.ActionMode</item>
        <item name="actionModeBackground">?colorAccent</item>
        <item name="actionModeCloseButtonStyle">
            @style/Widget.GuidelinesCompat.ActionButton.CloseMode
        </item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/Widget.GuidelinesCompat.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">
            @style/Widget.GuidelinesCompat.Toolbar.Button.Navigation
        </item>
        <item name="actionOverflowButtonStyle">
            @style/Widget.GuidelinesCompat.ActionButton.Overflow
        </item>

    </style>

    <!--  Theme: Light.DarkToolbar.NoActionbar -->
    <style name="Theme.GuidelinesCompat.Light.DarkToolbar.NoActionbar" parent="Theme.GuidelinesCompat.Light.DarkToolbar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

